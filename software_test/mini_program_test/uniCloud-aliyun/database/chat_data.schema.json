// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["userId", "posttime", "content"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"userId":{
			"bsonType": "string",
			"title": "关联用户的ID",
			"trim": "both"
		},
		"posttime":{
			"bsonType": "timestamp",
			"title": "时间戳",
			"description": "可以是用户发送的时间，也可以是收到答复的时间"
		},
		"content":{
			"bsonType": "string",
			"title": "对话内容",
			"description": "对话内容：包括提问和回答"
		}
	}
}