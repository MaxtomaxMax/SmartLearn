// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"user_info":{
			// 用户信息集合
			"fields":{
				"_id": {
					// 默认索引
					"description": "ID，系统自动生成",
					"required": true,
					"permission": {
					            "read": false,
					            "create": false,
					            "update": false,
					            "delete": false
					}
					
				},
				"username":{
					"bsonType": "string",
					"required": true	// 表示字段是必需的	
				},
				"email":{
					"bsonType":"string",
					"require": true,
					"unique": true
				},
				"password":{
					"bsonType": "string",
					"required": true
				}
			},
			"indexes":{
				// 自定义的索引，默认为_id索引
				"username_index":{
					"fields":["username"]
				},
				"email_index":{
					"fields":["email"]
				}

			}
		}
		
	}
}